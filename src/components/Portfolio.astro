---
const projects = [
  {
    title: 'Renovación de Cocina Moderna',
    description: 'Transformación completa de la cocina con gabinetes personalizados y una isla.',
    image: '/portfolio/kitchen.webp',
    slug: 'modern-kitchen'
  },
  {
    title: 'Remodelación de Baño de Lujo',
    description: 'Renovación de baño estilo spa con accesorios premium.',
    image: '/portfolio/bathroom.webp',
    slug: 'luxury-bathroom'
  },
  {
    title: 'Diseño de Interiores de Restaurante',
    description: 'Espacio de restaurante contemporáneo con iluminación personalizada.',
    image: '/portfolio/restaurant.webp',
    slug: 'restaurant-design'
  },
];
---

<section id="portfolio" class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-4xl font-bold text-primary mb-4">Nuestro Portafolio</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Explora nuestros proyectos recientes y observa la calidad de nuestro trabajo
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <a 
          href={`/portfolio/${project.slug}`}
          class="group relative overflow-hidden rounded-lg block"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <img 
            src={project.image} 
            alt={project.title}
            class="w-full h-64 object-cover transition-transform group-hover:scale-110"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity">
            <div class="absolute bottom-0 p-6">
              <h3 class="text-xl font-bold text-white mb-2">{project.title}</h3>
              <p class="text-gray-200">{project.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>