            <button type="button" data-cc="show-preferencesModal" class="hover:text-primary transition-all">
               Actualizar cookies
            </button>
          </li>
        </ul>
      </div>

      <!-- Redes Sociales con hover effects -->
      <div data-aos="fade-left" data-aos-delay="250">
        <h3 class="text-xl font-bold mb-4 flex items-center">
          <span></span>
          <span class="ml-2">S铆guenos</span>
