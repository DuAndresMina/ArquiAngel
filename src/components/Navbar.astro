---
const links = [
  { href: '/', text: 'Inicio' },
  { href: '/', text: 'Servicios', hash: '#services' },
  { href: '/', text: 'Portafolio', hash: '#portfolio' },
  { href: '/', text: 'Contacto', hash: '#contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed w-full bg-white/90 backdrop-blur-sm z-50 shadow-sm">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-2xl font-bold text-primary">
        <img src="/logosinfondo.webp" alt="RemodelPro Logo" class="h-12" />
      </a>
      
      <!-- Desktop menu only -->
      <ul class="hidden lg:flex space-x-8">
        {links.map(link => (
          <li>
            <a 
              href={link.hash ? `${link.href}${link.hash}` : link.href}
              class="text-gray-600 hover:text-primary transition-colors"
            >
              {link.text}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>