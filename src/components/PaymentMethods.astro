---
const paymentMethods = [
  { name: "PSE", logo: "/payments/pse.png" },
  { name: "Bancolombia", logo: "/payments/bancolombia.png" },
  { name: "Davivienda", logo: "/payments/davivienda.png" },
  { name: "Efectivo", logo: "/payments/efectivo.png" },
  { name: "Nequi", logo: "/payments/nequi.png" },
  { name: "Daviplata", logo: "/payments/daviplata.png" }
];
---

<section class="py-12 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-8" data-aos="fade-up">
      <h2 class="text-2xl font-bold text-primary mb-2">Métodos de Pago</h2>
      <p class="text-gray-600">Múltiples opciones para tu comodidad</p>
    </div>

    <div class="flex flex-wrap justify-center items-center gap-8" data-aos="fade-up">
      {paymentMethods.map((method) => (
        <div class="w-24 h-24 flex items-center justify-center p-4 bg-white rounded-lg shadow-md">
          <img 
            src={method.logo} 
            alt={`Pago con ${method.name}`} 
            class="max-w-full max-h-full object-contain"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>