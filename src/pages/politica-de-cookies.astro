import Layout from '../layouts/Layout.astro';

const title = "AC Arquitectura - Política de Cookies";
const description = "Consulta la política de cookies de AC Arquitectura & Construcción S.A.S. para conocer cómo utilizamos las cookies en nuestro sitio web.";
const url = "https://www.acarquitectura.com.co/politica-de-cookies";
const image = "https://opengraph.b-cdn.net/production/images/e0540ec3-9987-4226-b126-db660c9c66b7.svg?token=V8LpduB_Z3vP5T3yB26RGfZoguaeB_hkrPJ_Qc8xqrw&height=130&width=300&expires=33275810993";
---

<Layout title={title} description={description} url={url} image={image}>
  <main class="pt-20 bg-gradient-to-b from-white to-neutral-50">
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto" data-aos="fade-up">
        <!-- Encabezado con icono -->
        <div class="text-center mb-12" data-aos="zoom-in">
          <div class="bg-primary w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-cookie-bite text-3xl text-white"></i>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-primary mb-4">Política de Cookies</h1>
          <p class="text-gray-600">Última actualización: {new Date().toLocaleDateString('es-CO')}</p>
        </div>

        <!-- Resumen clave -->
        <div class="bg-primary/5 p-6 rounded-2xl mb-8 shadow-md" data-aos="fade-up">
          <div class="flex items-start gap-4">
            <i class="fas fa-info-circle text-primary text-2xl mt-1"></i>
            <div>
              <p class="text-gray-600 mb-4">
                Utilizamos cookies para mejorar tu experiencia. Gestiona tus preferencias en cualquier momento:
              </p>
              <button
                type="button"
                data-cc="show-preferencesModal"
                class="bg-primary text-white px-6 py-3 rounded-lg font-medium hover:bg-secondary transition-all flex items-center gap-2"
              >
                <i class="fas fa-sliders-h"></i>
                Configurar Cookies
              </button>
            </div>
          </div>
        </div>

        <!-- Índice interactivo -->
        <nav class="sticky top-20 bg-white shadow-lg rounded-xl p-6 mb-8 z-10" data-aos="fade-up">
          <h2 class="text-xl font-bold text-primary mb-4">Contenido</h2>
          <ul class="flex flex-wrap gap-4">
            {['Qué son', 'Tipos', 'Google Analytics', 'Consentimientos', 'Gestión', 'Consentimiento'].map((item, index) => (
              <li>
                <a 
                  href={`#seccion-${index + 1}`} 
                  class="text-gray-600 hover:text-primary px-4 py-2 rounded-lg hover:bg-primary/10 transition-colors"
                  data-aos="fade-up" 
                  data-aos-delay={index * 50}
                >
                  {index + 1}. {item}
                </a>
              </li>
            ))}
          </ul>
        </nav>

        <!-- Contenido principal -->
        <div class="bg-white shadow-xl rounded-2xl p-8 md:p-12">
          <!-- Sección 1 -->
          <section id="seccion-1" class="mb-12 scroll-mt-20" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center">
                <i class="fas fa-question-circle text-primary text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-primary">1. ¿Qué son las cookies?</h2>
            </div>
            <div class="prose max-w-none border-l-4 border-primary/20 pl-6 ml-3">
              <p class="text-gray-600">Pequeños archivos de texto almacenados en tu dispositivo que mejoran la navegación y personalizan tu experiencia.</p>
            </div>
          </section>

          <!-- Sección 2 -->
          <section id="seccion-2" class="mb-12 scroll-mt-20" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center">
                <i class="fas fa-tags text-primary text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-primary">2. Tipos de cookies</h2>
            </div>
            <div class="grid md:grid-cols-2 gap-6">
              {[
                ['Técnicas', 'fas fa-cog', 'Funcionamiento básico del sitio'],
                ['Analíticas', 'fas fa-chart-line', 'Medición de tráfico y uso'],
                ['Personalización', 'fas fa-user-cog', 'Preferencias del usuario']
              ].map(([title, icon, text]) => (
                <div class="bg-neutral-50 p-6 rounded-xl border border-primary/10">
                  <div class="flex items-center gap-4 mb-4">
                    <i class={`${icon} text-primary text-xl`}></i>
                    <h3 class="font-bold text-primary">{title}</h3>
                  </div>
                  <p class="text-gray-600 text-sm">{text}</p>
                </div>
              ))}
            </div>
          </section>

          <!-- Sección 3 -->
          <section id="seccion-3" class="mb-12 scroll-mt-20" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center">
                <i class="fab fa-google text-primary text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-primary">3. Google Analytics</h2>
            </div>
            <div class="overflow-x-auto">
              <table class="w-full border-collapse">
                <thead class="bg-primary/10">
                  <tr>
                    <th class="p-4 text-left">Cookie</th>
                    <th class="p-4 text-left">Propósito</th>
                    <th class="p-4 text-left">Expiración</th>
                  </tr>
                </thead>
                <tbody>
                  {[
                    ['_ga', 'Diferenciar usuarios', '2 años'],
                    ['_gid', 'Sesión de usuario', '24 horas'],
                    ['_gat', 'Limitar solicitudes', '1 minuto']
                  ].map(([cookie, purpose, expiration]) => (
                    <tr class="border-b border-primary/10">
                      <td class="p-4 font-medium">{cookie}</td>
                      <td class="p-4 text-gray-600">{purpose}</td>
                      <td class="p-4 text-gray-600">{expiration}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
            <div class="mt-6 prose max-w-none">
              <p class="text-gray-600">
                Para más información: 
                <a href="https://policies.google.com/privacy" class="text-primary hover:underline">
                  Política de Privacidad de Google
                </a>
              </p>
              <a href="https://tools.google.com/dlpage/gaoptout" 
                 class="inline-flex items-center gap-2 mt-4 px-4 py-2 bg-primary/10 text-primary rounded-lg hover:bg-primary/20 transition-colors">
                <i class="fas fa-ban"></i>
                Opt-out de Google Analytics
              </a>
            </div>
          </section>

          <!-- Sección 4 -->
          <section id="seccion-4" class="mb-12 scroll-mt-20" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center">
                <i class="fas fa-check-double text-primary text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-primary">4. Consentimientos</h2>
            </div>
            <div class="grid gap-4">
              {[
                ['Almacenamiento publicitario', 'ad_storage', 'Permite almacenar datos relacionados con anuncios personalizados.'],
                ['Datos de usuario', 'ad_user_data', 'Incluye información del usuario utilizada para personalizar anuncios.'],
                ['Personalización', 'ad_personalization', 'Permite personalizar la experiencia del usuario en función de sus preferencias.'],
                ['Análisis', 'analytics_storage', 'Se utiliza para recopilar datos sobre el uso del sitio web y generar estadísticas.'],
                ['Funcionalidad', 'functionality_storage', 'Almacena configuraciones necesarias para el funcionamiento básico del sitio.'],
                ['Seguridad', 'security_storage', 'Garantiza la seguridad del sitio y protege contra accesos no autorizados.']
              ].map(([title, code, description]) => (
                <div class="p-4 bg-white border border-primary/10 rounded-lg flex items-center justify-between">
                  <div>
                    <h3 class="font-medium text-primary">{title}</h3>
                    <code class="text-sm text-gray-500">{code}</code>
                    <p class="text-sm text-gray-600 mt-2">{description}</p>
                  </div>
                  <i class="fas fa-info-circle text-primary/60"></i>
                </div>
              ))}
            </div>
          </section>

          <!-- Sección 5 -->
          <section id="seccion-5" class="mb-12 scroll-mt-20" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center">
                <i class="fas fa-tools text-primary text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-primary">5. Gestión de cookies</h2>
            </div>
            <div class="prose max-w-none">
              <div class="bg-neutral-50 p-6 rounded-xl">
                <h3 class="text-lg font-bold text-primary mb-4">Configuración del navegador</h3>
                <ul class="space-y-4">
                  {[
                    ['Google Chrome', 'chrome://settings/cookies'],
                    ['Mozilla Firefox', 'about:preferences#privacy'],
                    ['Safari', 'prefs:Advanced'],
                    ['Microsoft Edge', 'edge://settings/privacy']
                  ].map(([browser, path]) => (
                    <li class="flex items-center gap-2">
                      <i class="fab fa-${browser.toLowerCase()} text-primary"></i>
                      <a href="${path}" class="text-primary hover:underline">
                        {browser}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </section>

          <!-- Sección 6 -->
          <section id="seccion-6" class="scroll-mt-20" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center">
                <i class="fas fa-file-signature text-primary text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-primary">6. Consentimiento</h2>
            </div>
            <div class="prose max-w-none bg-primary/5 p-6 rounded-xl">
              <p class="text-gray-600">
                Al continuar navegando, aceptas el uso de cookies según esta política. 
                Puedes retirar tu consentimiento en cualquier momento mediante la 
                <button 
                  data-cc="show-preferencesModal"
                  class="text-primary hover:underline font-medium"
                >
                  configuración de cookies
                </button>.
              </p>
            </div>
          </section>
        </div>
      </div>
    </div>

    <!-- Botón flotante -->
    <button 
      data-cc="show-preferencesModal"
      class="fixed bottom-8 right-8 bg-primary text-white w-14 h-14 rounded-full shadow-xl hover:bg-secondary transition-all flex items-center justify-center"
      data-aos="zoom-in"
      title="Configurar cookies"
    >
      <i class="fas fa-cookie-bite text-xl"></i>
    </button>
  </main>
</Layout>

<style is:global>
  .scroll-mt-20 {
    scroll-margin-top: 5rem;
  }

  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid #e5e7eb;
  }

  th {
    background-color: rgba(242, 116, 5, 0.1);
    font-weight: 600;
  }

  tr:hover {
    background-color: rgba(242, 116, 5, 0.05);
  }
</style>