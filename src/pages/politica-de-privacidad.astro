---
import Layout from '../layouts/Layout.astro';

const title = "AC Arquitectura - Política de Privacidad";
const description = "Consulta la política de privacidad de AC Arquitectura & Construcción S.A.S. para conocer cómo tratamos sus datos personales.";
const url = "https://www.acarquitectura.com.co/politica-de-privacidad";
const image = "https://opengraph.b-cdn.net/production/images/e0540ec3-9987-4226-b126-db660c9c66b7.svg?token=V8LpduB_Z3vP5T3yB26RGfZoguaeB_hkrPJ_Qc8xqrw&height=130&width=300&expires=33275810993";
---

<Layout title={title} description={description} url={url} image={image}>
  <main class="pt-20 bg-gradient-to-b from-white to-neutral-50">
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto" data-aos="fade-up">
        <!-- Encabezado con icono -->
        <div class="text-center mb-12" data-aos="zoom-in">
          <div class="bg-primary w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-shield-alt text-3xl text-white"></i>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-primary mb-4">Política de Privacidad</h1>
          <p class="text-gray-600 max-w-xl mx-auto">Última actualización: {new Date().toLocaleDateString('es-CO')}</p>
        </div>

        <!-- Índice interactivo -->
        <div class="sticky top-20 bg-white shadow-lg rounded-xl p-6 mb-8 z-10" data-aos="fade-up">
          <h2 class="text-xl font-bold text-primary mb-4">Contenido</h2>
          <nav class="flex flex-wrap gap-4">
            {['Responsable', 'Finalidad', 'Datos', 'Derechos', 'Seguridad', 'Transferencia', 'Comunicaciones', 'Modificaciones', 'Contacto'].map((item, index) => (
              <a 
                href={`#seccion-${index + 1}`} 
                class="text-gray-600 hover:text-primary transition-colors px-4 py-2 rounded-lg hover:bg-primary/10"
                data-aos="fade-up" 
                data-aos-delay={index * 50}
              >
                {index + 1}. {item}
              </a>
            ))}
          </nav>
        </div>

        <!-- Contenido estructurado -->
        <div class="bg-white shadow-xl rounded-2xl p-8 md:p-12">
          <!-- Sección 1 -->
          <section id="seccion-1" class="mb-10 scroll-mt-20" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center">
                <i class="fas fa-user-tie text-primary text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-primary">1. Responsable del tratamiento</h2>
            </div>
            <div class="prose max-w-none border-l-4 border-primary/20 pl-6 ml-3">
              <p class="text-gray-600">
                <strong class="text-primary">Razón Social:</strong> AC Arquitectura & Construcción S.A.S.<br>
                <strong class="text-primary">NIT:</strong> 901508672<br>
                <strong class="text-primary">Dirección:</strong> Cali, Colombia
              </p>
            </div>
          </section>

          <!-- Sección 2 -->
          <section id="seccion-2" class="mb-10 scroll-mt-20" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center">
                <i class="fas fa-bullseye text-primary text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-primary">2. Finalidad del tratamiento</h2>
            </div>
            <div class="prose max-w-none border-l-4 border-primary/20 pl-6 ml-3">
              <ul class="space-y-4">
                {['Gestión de solicitudes', 'Envío de presupuestos', 'Mejora de servicios', 'Comunicación por WhatsApp/Redes Sociales'].map((item, index) => (
                  <li class="flex items-start">
                    <i class="fas fa-check-circle text-secondary mr-3 mt-1"></i>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          </section>

          <!-- Sección 3 -->
          <section id="seccion-3" class="mb-10 scroll-mt-20" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center">
                <i class="fas fa-database text-primary text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-primary">3. Datos personales recopilados</h2>
            </div>
            <div class="prose max-w-none border-l-4 border-primary/20 pl-6 ml-3">
              <div class="grid md:grid-cols-2 gap-4">
                {['Nombre completo', 'Correo electrónico', 'Teléfono', 'Detalles del proyecto', 'Redes sociales'].map((item, index) => (
                  <div class="bg-neutral-50 p-3 rounded-lg flex items-center">
                    <i class="fas fa-circle text-primary text-xs mr-2"></i>
                    {item}
                  </div>
                ))}
              </div>
            </div>
          </section>

          <!-- Sección 4 -->
          <section id="seccion-4" class="mb-10 scroll-mt-20" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center">
                <i class="fas fa-gavel text-primary text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-primary">4. Derechos del titular</h2>
            </div>
            <div class="prose max-w-none border-l-4 border-primary/20 pl-6 ml-3">
              <div class="grid gap-4">
                {['Acceso', 'Rectificación', 'Eliminación', 'Oposición', 'Portabilidad'].map((derecho, index) => (
                  <div class="p-4 bg-white shadow-sm rounded-lg border border-primary/10">
                    <h3 class="font-semibold text-primary mb-2">{derecho}</h3>
                    <p class="text-gray-600 text-sm">Solicite este derecho mediante nuestro formulario de contacto</p>
                  </div>
                ))}
              </div>
            </div>
          </section>

          <!-- Sección de contacto destacada -->
          <section id="seccion-9" class="mt-16 bg-primary/5 rounded-xl p-8" data-aos="fade-up">
            <div class="flex items-center gap-4 mb-6">
              <div class="bg-primary w-12 h-12 rounded-lg flex items-center justify-center">
                <i class="fas fa-headset text-white text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-primary">9. Contacto</h2>
            </div>
            <div class="prose max-w-none">
              <div class="flex flex-col md:flex-row gap-6">
                <div class="flex-1">
                  <p class="text-gray-600 mb-4">
                    Comuníquese con nuestro oficial de protección de datos:
                  </p>
                  <a href="mailto:ac.arteconstructivo@gmail.com" 
                     class="text-primary hover:underline font-medium inline-block mb-4">
                    <i class="fas fa-envelope mr-2"></i>
                    ac.arteconstructivo@gmail.com
                  </a>
                  <div class="flex gap-4 mt-4">
                    <a href="https://wa.me/+573146755310" 
                       class="text-primary hover:text-secondary" 
                       target="_blank">
                      <i class="fab fa-whatsapp text-2xl"></i>
                    </a>
                    <a href="https://www.facebook.com/ac.arquitecurayconstruccion" 
                       class="text-primary hover:text-secondary" 
                       target="_blank">
                      <i class="fab fa-facebook text-2xl"></i>
                    </a>
                    <a href="https://www.instagram.com/ac_arquitecturayconstrucciones" 
                       class="text-primary hover:text-secondary" 
                       target="_blank">
                      <i class="fab fa-instagram text-2xl"></i>
                    </a>
                  </div>
                </div>
                <div class="flex-1">
                  <a href="/solicitud-derechos" 
                     class="btn-primary w-full text-center">
                    <i class="fas fa-file-alt mr-2"></i>
                    Solicitud de derechos ARCO
                  </a>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>

    <!-- Botón flotante -->
    <button 
      onclick="window.scrollTo({top: 0, behavior: 'smooth'})" 
      class="fixed bottom-8 right-8 bg-primary text-white w-12 h-12 rounded-full shadow-xl hover:bg-secondary transition-all flex items-center justify-center"
      data-aos="zoom-in"
    >
      <i class="fas fa-arrow-up"></i>
    </button>
  </main>
</Layout>

<style is:global>
  .scroll-mt-20 {
    scroll-margin-top: 5rem;
  }

  .btn-primary {
    @apply bg-primary text-white px-6 py-3 rounded-lg font-medium hover:bg-secondary transition-colors flex items-center justify-center;
  }

  .prose ul {
    @apply list-none pl-0;
  }

  .prose li {
    @apply pl-0;
  }
</style>