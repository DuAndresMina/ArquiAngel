---
import Layout from '../../layouts/Layout.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro';

const services = {
  'servicio-basico': {
    title: 'Servicio Básico',
    description: 'Nuestro paquete de Servicio Básico está diseñado para propietarios que buscan renovar y actualizar sus espacios. Este servicio es perfecto para renovaciones rápidas y mejoras esenciales que pueden transformar su espacio en poco tiempo.',
    whatsappMessage: "Hola, me gustaría obtener más información sobre el Servicio Básico de remodelación.",
    fullDescription: `Nuestro Servicio Básico incluye:
    - Consulta y planificación profesional.
    - Aplicación de estuco y pintura.
    - Actualizaciones y reparaciones de pisos.
    - Instalación de luminarias básicas.
    - Trabajos de carpintería.
    - Actualizaciones básicas de accesorios de plomería.
    - Asistencia en la selección de materiales de calidad.
    - Cronograma del proyecto: 3-4 semanas`,
    features: [
      'Consulta inicial y planificación del diseño.',
      'Guía de selección de materiales.',
      'Instalación profesional.',
      'Inspección de garantía de calidad.',
      'Cobertura de garantía básica.'
    ],
    url: 'https://www.acarquitectura.com.co/services/servicio-basico',
    image: 'https://opengraph.b-cdn.net/production/images/e0540ec3-9987-4226-b126-db660c9c66b7.svg?token=V8LpduB_Z3vP5T3yB26RGfZoguaeB_hkrPJ_Qc8xqrw&height=130&width=300&expires=33275810993'
  },
  'servicio-plus': {
    title: 'Servicio Plus',
    description: 'El paquete plus ofrece una solución de renovación integral para quienes buscan mejoras significativas en sus espacios. Este servicio combina artesanía de calidad con elementos de diseño mejorados para crear transformaciones impresionantes.',
    whatsappMessage: "Hola, me gustaría obtener más información sobre el Servicio plus de remodelación.",
    fullDescription: `Nuestro Servicio plus incluye:
    - Consulta de diseño detallado.
    - Renovaciones completas de las habitaciones.
    - Opciones de gabinetes personalizados.
    - Diseño de iluminación avanzado.
    - Selección de materiales de primera calidad.
    - Actualizaciones de fontanería y electricidad.
    - Gestión de proyectos.
    - Cronograma del proyecto: 4-5 semanas`,
    features: [
      'Consulta de diseño profesional.',
      'Soluciones personalizadas y modificaciones.',
      'Opciones de materiales de primera calidad.',
      'Gestión de proyectos.',
      'Cobertura de garantía extendida.'
    ],
    url: 'https://www.acarquitectura.com.co/services/servicio-plus',
    image: 'https://opengraph.b-cdn.net/production/images/e0540ec3-9987-4226-b126-db660c9c66b7.svg?token=V8LpduB_Z3vP5T3yB26RGfZoguaeB_hkrPJ_Qc8xqrw&height=130&width=300&expires=33275810993'
  },
  'servicio-premium': {
    title: 'Servicio Premium',
    description: 'Nuestro Servicio Premium representa el pináculo de la excelencia en la renovación del hogar. Este paquete integral incluye todo lo necesario para una transformación completa de su espacio, con materiales de la más alta calidad y mano de obra experta.',
    whatsappMessage: "Hola, me gustaría obtener más información sobre el Servicio Premium de remodelación.",
    fullDescription: `Nuestro Servicio Premium incluye:
    - Diseño y planificación integral.
    - Modificaciones arquitectónicas.
    - Soluciones personalizadas.
    - Selección de materiales de alta gama.
    - Integración en el hogar inteligente.
    - Gestión completa del proyecto.
    - Acabados y detalles premium.
    - Cronograma del proyecto: 5-8 semanas`,
    features: [
      'Consulta de diseño exclusivo.',
      'Planificación arquitectónica.',
      'Materiales y acabados de primera calidad.',
      'Gerente de proyecto dedicado.',
      'Paquete de garantía integral.'
    ],
    url: 'https://www.acarquitectura.com.co/services/servicio-premium',
    image: 'https://opengraph.b-cdn.net/production/images/e0540ec3-9987-4226-b126-db660c9c66b7.svg?token=V8LpduB_Z3vP5T3yB26RGfZoguaeB_hkrPJ_Qc8xqrw&height=130&width=300&expires=33275810993'
  }
};

export function getStaticPaths() {
  return [
    {params: {service: 'servicio-basico'}},
    {params: {service: 'servicio-plus'}},
    {params: {service: 'servicio-premium'}}
  ];
}

const { service } = Astro.params;
const serviceData = services[service];
---

<Layout title={`AC Arquitectura - ${serviceData.title}`} description={serviceData.description} url={serviceData.url} image={serviceData.image}>
  <main class="pt-20">
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold text-primary mb-6" data-aos="fade-up">
          {serviceData.title}
        </h1>

        <p class="text-gray-600 mb-8" data-aos="fade-up" data-aos-delay="100">
          {serviceData.description}
        </p>

        <div class="prose max-w-none" data-aos="fade-up" data-aos-delay="200">
          <p class="text-gray-600 whitespace-pre-line mb-8">
            {serviceData.fullDescription}
          </p>

          <h2 class="text-2xl font-bold text-primary mb-4">Características clave</h2>
          <ul class="space-y-2 mb-8">
            {serviceData.features.map(feature => (
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 text-secondary mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>

        <div class="flex flex-col md:flex-row gap-2 mt-auto">
          <a 
            href="/#contact" 
            class="cta-button flex-1 text-center bg-primary text-white px-6 py-3 rounded-lg transition-colors relative overflow-hidden text-base"
          >
            Contáctanos
            <span class="hover-effect"></span>
            <span class="hover-effect"></span>
            <span class="hover-effect"></span>
            <span class="hover-effect"></span>
          </a>
          <a 
            href="/#servicios" 
            class="learn-more flex-1 text-center bg-secondary hover:bg-secondary/90 text-white px-6 py-3 rounded-lg transition-colors text-base"
          >
            <span class="circle">
              <span class="icon arrow"></span>
            </span>
            <span class="button-text">Regresar al inicio</span>
          </a>
        </div>
      </div>
    </div>
  </main>
  <WhatsAppButton message={serviceData.whatsappMessage} />
</Layout>

<style>
.learn-more {
  position: relative;
  display: inline-block;
  cursor: pointer;
  outline: none;
  border: 0;
  vertical-align: middle;
  text-decoration: none;
  background: transparent;
  padding: 0;
  font-size: inherit;
  font-family: inherit;
  width: 12rem;
  height: 3em; /* Ajusta la altura del botón */
  line-height: 3em; /* Centra verticalmente el texto */
}

.learn-more .circle {
  transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
  position: relative;
  display: block;
  margin: 0;
  width: 3rem;
  height: 3rem;
  background: #282936;
  border-radius: 1.5rem;
}

.learn-more .icon {
  transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  background: #fff;
}

.learn-more .icon.arrow {
  transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
  left: -1rem; /* Mueve la flecha más a la izquierda */
  width: 1rem;
  height: 0.125rem;
  background: none;
}

.learn-more .icon.arrow::before {
  position: absolute;
  content: '';
  top: -0.25rem;
  right: 0.0625rem;
  width: 0.5rem;
  height: 0.5rem;
  border-top: 0.125rem solid #fff;
  border-right: 0.125rem solid #fff;
  transform: rotate(45deg);
}

.learn-more .button-text {
  transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0.5rem 0;
  margin: 1rem 0 0rem 0rem; /* Mueve el texto más a la izquierda */
  color: #282936;
  font-weight: 700;
  line-height: 1.6;
  text-align: center;
  text-transform: uppercase;
}

.learn-more:hover .circle {
  width: 100%;
}

.learn-more:hover .icon.arrow {
  background: #fff;
  transform: translate(2rem, 0); /* Mueve la flecha más a la izquierda en el estado hover */
}

.learn-more:hover .button-text {
  color: #fff;
}

.cta-button {
  --c: #1a202c; /* Color primario */
  color: white; /* Cambia el color del texto a blanco */
  font-size: 16px;
  border: none; /* Elimina el borde */
  border-radius: 2em;
  width: 100%;
  height: 3em;
  text-transform: uppercase;
  font-weight: bold;
  font-family: inherit; /* Usa la fuente nativa */
  letter-spacing: 0.1em;
  text-align: center;
  line-height: 3em; /* Centra verticalmente el texto */
  position: relative;
  overflow: hidden;
  z-index: 1;
  transition: 0.5s;
}

.cta-button span.hover-effect {
  position: absolute;
  width: 25%;
  height: 100%;
  background-color: var(--c);
  transform: translateY(150%);
  border-radius: 50%;
  left: calc((var(--n) - 1) * 25%);
  transition: 0.5s;
  transition-delay: calc((var (--n) - 1) * 0.1s);
  z-index: -1;
}

.cta-button:hover {
  color: white;
}

.cta-button:hover span.hover-effect {
  transform: translateY(0) scale(2);
}

.cta-button span.hover-effect:nth-child(1) {
  --n: 1;
}

.cta-button span.hover-effect:nth-child(2) {
  --n: 2;
}

.cta-button span.hover-effect:nth-child(3) {
  --n: 3;
}

.cta-button span.hover-effect:nth-child(4) {
  --n: 4;
}
</style>