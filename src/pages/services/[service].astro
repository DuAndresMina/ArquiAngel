---
import Layout from '../../layouts/Layout.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro';
import 'photoswipe/style.css';

const services = {
  'servicio-basico': {
    title: 'Servicio Básico',
    description: 'Renovaciones básicas para actualizar y mejorar pequeños espacios.',
    whatsappMessage: "Hola, me gustaría obtener más información sobre el Servicio Básico de remodelación.",
    fullDescription: `El Servicio Básico está diseñado para propietarios que buscan refrescar y actualizar sus espacios sin cambios estructurales importantes. Es ideal para renovaciones rápidas y mejoras esenciales que pueden transformar su hogar en poco tiempo.`,
    features: [
      'Mesón en cuarzo o granito.',
      'Muebles y barra de cocina en madera RH.',
      'Cambio de combo sanitario.',
      'Griferías y accesorios básicos.',
      'Pisos en cerámica.',
      'Paredes de baño y cocina en cerámica.',
      'Paredes en estuco y pintura.',
      'Cielos estucados y pintados.',
      'Puertas y armarios en madera RH color básico.'
    ],
    images: [
      '/services/basic/1.jpg',
      '/services/basic/2.jpg',
      '/services/basic/3.jpg',
      '/services/basic/4.jpg'
    ],
    video: '/services/basic/overview.mp4'
  },
  'servicio-estandar': {
    title: 'Servicio Estándar',
    description: 'Renovación integral para transformaciones completas en sala, comedor, cocina, baños, patio y zona de oficios.',
    whatsappMessage: "Hola, me gustaría obtener más información sobre el Servicio Estándar de remodelación.",
    fullDescription: `El Servicio Estándar ofrece una solución de renovación integral para quienes buscan mejoras significativas en sus espacios. Combina calidad y diseño para crear transformaciones impresionantes.`,
    features: [
      'Mesón en cuarzo o granito.',
      'Muebles y barra de cocina en madera RH colores estándar.',
      'Cambio de combo sanitario.',
      'Griferías y accesorios gama media.',
      'Pisos en cerámica, laminado o porcelanato.',
      'Paredes de baño y cocina en cerámica o porcelanato.',
      'Paredes en estuco y pintura.',
      'Cielos en drywall.',
      'Puertas y armarios en madera RH color estándar.'
    ],
    images: [
      '/services/enhanced/1.jpg',
      '/services/enhanced/2.jpg',
      '/services/enhanced/3.jpg',
      '/services/enhanced/4.jpg'
    ],
    video: '/services/enhanced/overview.mp4'
  },
  'servicio-premium': {
    title: 'Servicio Premium',
    description: 'Renovación a gran escala con materiales premium y diseño experto.',
    whatsappMessage: "Hola, me gustaría obtener más información sobre el Servicio Premium de remodelación.",
    fullDescription: `El Servicio Premium representa la máxima excelencia en renovación de hogares. Incluye todo lo necesario para una transformación completa de su espacio, con los materiales de mayor calidad y la mejor mano de obra.`,
    features: [
      'Mesón en cuarzo o granito.',
      'Muebles y barra de cocina en madera RH colores de alta gama.',
      'Herrajes de cierre lento y accesorios de alta gama.',
      'Cambio de combo sanitario.',
      'Griferías y accesorios gama alta.',
      'Pisos en cerámica, SPC o porcelanato.',
      'Paredes de baño y cocina en cerámica o porcelanato.',
      'Paredes en estuco y pintura.',
      'Cielos en drywall.',
      'Luces decorativas.',
      'Puertas y armarios en madera RH colores de alta gama.'
    ],
    images: [
      '/services/premium/1.jpg',
      '/services/premium/2.jpg',
      '/services/premium/3.jpg',
      '/services/premium/4.jpg'
    ],
    video: '/services/premium/overview.mp4'
  }
};

export function getStaticPaths() {
  return [
    {params: {service: 'servicio-basico'}},
    {params: {service: 'servicio-estandar'}},
    {params: {service: 'servicio-premium'}}
  ];
}

const { service } = Astro.params;
const serviceData = services[service];
---

<Layout title={`AC Arquitectura - ${serviceData.title}`}>
  <main class="pt-20">
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold text-primary mb-6" data-aos="fade-up">
          {serviceData.title}
        </h1>
        
        <!-- Gallery Grid -->
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-8" data-aos="fade-up" data-aos-delay="100">
          {serviceData.images.map((image, index) => (
            <a
              href={image}
              data-pswp-width="1600"
              data-pswp-height="1000"
              class={`gallery-item ${index === 0 ? 'col-span-2 row-span-2' : ''}`}
            >
              <img 
                src={image}
                alt={`${serviceData.title} - Image ${index + 1}`}
                class={`w-full h-full object-cover rounded-lg ${index === 0 ? 'min-h-[400px]' : 'h-48'}`}
                loading={index === 0 ? 'eager' : 'lazy'}
              />
            </a>
          ))}
        </div>

        {serviceData.video && (
          <div class="mb-8" data-aos="fade-up" data-aos-delay="150">
            <video
              class="w-full rounded-lg"
              controls
              poster={serviceData.images[0]}
            >
              <source src={serviceData.video} type="video/mp4" />
              Your browser does not support the video tag.
            </video>
          </div>
        )}

        <div class="prose max-w-none" data-aos="fade-up" data-aos-delay="200">
          <p class="text-gray-600 whitespace-pre-line mb-8">
            {serviceData.fullDescription}
          </p>

          <h2 class="text-2xl font-bold text-primary mb-4">Palabaras claves</h2>
          <ul class="space-y-2 mb-8">
            {serviceData.features.map(feature => (
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 text-secondary mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>

        <div class="flex gap-4 mt-8">
          <a 
            href="/#contact" 
            class="flex-1 text-center bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg transition-colors"
          >
            Contáctanos
          </a>
          <a 
            href="/#services" 
            class="flex-1 text-center bg-secondary hover:bg-secondary/90 text-white px-6 py-3 rounded-lg transition-colors"
          >
            Regresar al inicio
          </a>
        </div>
      </div>
    </div>
  </main>
  <WhatsAppButton message={serviceData.whatsappMessage} />
</Layout>

<script>
  import PhotoSwipe from 'photoswipe';
  
  const galleryElements = document.querySelectorAll('.gallery-item');
  let gallery = null;

  galleryElements.forEach((el, index) => {
    el.addEventListener('click', (e) => {
      e.preventDefault();
      
      const items = Array.from(galleryElements).map(element => ({
        src: element.href,
        w: parseInt(element.dataset.pswpWidth, 10),
        h: parseInt(element.dataset.pswpHeight, 10)
      }));

      gallery = new PhotoSwipe({
        dataSource: items,
        index: index,
        closeOnVerticalDrag: true,
        wheelToZoom: false,
      });
      
      gallery.init();
    });
  });
</script>